@{
    ViewData["Title"] = "Edit Todo";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card p-5 mt-5 mb-5">
                <h3 class="text-center">Edit Todo</h3>
                <form action="@ViewBag.todo.todo_id/ProcessEditTodo" method="POST">
                    <div class="form-group">
                        <input name="title" class="form-control" value="@ViewBag.todo.title">
                    </div>
                    <div class="form-group">
                        <input type="text" name="desc"  class="form-control" value="@ViewBag.todo.desc">
                    </div>
                    <div class="form-group">
                        <label for="due_by"></label>
                        <input type="datetime-local" name="due_by" class="form-control" placeholder="@ViewBag.todo.due_by">
                    </div>
                    <input type="submit" value="Update Todo" class="btn btn-info">
                </form>
            </div> 
        </div>
    </div>
</div>