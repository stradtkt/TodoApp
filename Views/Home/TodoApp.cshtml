@model TodoApp.Models.Todo
@{
    ViewData["Title"] = "Todo App";
}
<div class="container-fluid">
<div class="row">
       <div class="col-md-4">
           <div class="card p-5 mt-5 mb-5">
           <h3 class="text-center">Add Todo</h3>
           <form asp-action="AddTodo" asp-controller="Home" method="POST">
               <div class="form-group">
                   <div class="bg-danger">
                       <span asp-validation-for="title" class="text-center text-white"></span>
                   </div>
                   <br>
                   <input asp-for="title" class="form-control" placeholder="Todo Title">
               </div>
               <div class="form-group">
                   <div class="bg-danger">
                       <span asp-validation-for="desc" class="text-center text-white"></span>
                   </div>
                   <br>
                   <textarea asp-for="desc" cols="30" rows="10" class="form-control" placeholder="Description"></textarea>
               </div>
               <div class="form-group">
                   <div class="bg-danger">
                       <span asp-validation-for="due_by" class="text-center text-white"></span>
                   </div>
                   <br>
                   <label for="due_by"></label>
                   <input type="datetime-local" asp-for="due_by" class="form-control">
               </div>
               <input type="submit" value="Add Todo" class="btn btn-info">
           </form>
       </div> 
    </div>
    <div class="col-md-8">
        <div class="card p-3 mt-5 mb-5">
            <div class="card-header text-center">
                <h3>Todos</h3>
            </div>
            <div class="card-body">
                @foreach (var t in ViewBag.todos)
                {
                    <div class="list-group shadow-lg">
                        <a class="list-group-item list-group-item-action">
                            <h5 class="mb-1 text-center">@t.title</h5>
                            <p class="mb-1 text-center">@t.desc</p>
                            <p class="text-center">@t.due_by</p>
                            <span><a href="DeleteTodo/@t.todo_id" class="btn btn-danger">Delete</a></span>
                            <span><a href="EditTodo/@t.todo_id" class="btn btn-warning text-white btn-block">Edit</a></span>
                        </a>
                    </div>
                    <hr>
                }
            </div>
        </div>
    </div>
</div>
</div>